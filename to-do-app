<body>
  <h1>ðŸ“‹ Liiska Hawlaha Maalinlaha ah</h1>
  <div class="input-section">
    <input type="text" id="hawsha" placeholder="Qor hawsha aad rabto...">
    <button onclick="kuDarHawl()">Ku Dar</button>
  </div>
  <ul id="liiska"></ul>

  <script>
    function kuDarHawl() {
      const hawshaInput = document.getElementById("hawsha");
      const hawshaText = hawshaInput.value.trim();

      if (hawshaText === "") {
        alert("Fadlan qor hawl marka hore!");
        return;
      }

      const li = document.createElement("li");
      li.textContent = hawshaText;

      li.addEventListener("click", function() {
        li.classList.toggle("completed");
      });

      const deleteBtn = document.createElement("button");
      deleteBtn.textContent = "Tirtir";
      deleteBtn.classList.add("delete-btn");
      deleteBtn.onclick = function() {
        li.remove();
      };

      li.appendChild(deleteBtn);
      document.getElementById("liiska").appendChild(li);

      hawshaInput.value = "";
    }
  </script>
</body>
